<?xml version="1.0" encoding="utf-8"?>
	           
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFEEEEEE"
    android:gravity="top">

  <LinearLayout
    android:id="@+id/titlebar"
    android:visibility="visible"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_gradient_top">
    
    <ImageView android:src="@drawable/safe_icon_small"
               android:layout_marginLeft="5dip"
               android:layout_marginTop="1dip"
               android:layout_marginRight="2dip"
               android:layout_gravity="center_vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
    
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textSize="16dip"
      android:textStyle="bold"
      android:layout_gravity="center_vertical"
      android:layout_margin="3dip" 
      android:textColor="#eeeeee"
      android:text="Passdroid"
      android:singleLine="true"/>

    <TextView
      android:id="@+id/password_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="12dip"
      android:layout_gravity="center_vertical"
      android:textColor="#eeeeee"
      android:layout_marginRight="10dip"
      android:text="0 passwords"
      android:singleLine="true"/>
      
  </LinearLayout>
  
  <ImageView android:src="@drawable/separator"
             android:layout_height="1px"
  			 android:layout_width="fill_parent"/>
  	
  <TextView
      android:id="@+id/empty_list_help"
      android:orientation="vertical"
      android:gravity="center_vertical|center_horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:text="@string/empty_list_help"
      android:padding="20dip"
      android:textColor="#FF000000"
      android:visibility="gone"/>

  <ListView 
    android:id="@id/android:list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:cacheColorHint="#00000000"
    android:scrollingCache="true"
    android:divider="#ffBBBBBB"
    android:layout_weight="5"
    android:dividerHeight="1px"
    android:longClickable="false"/> 

</LinearLayout>
