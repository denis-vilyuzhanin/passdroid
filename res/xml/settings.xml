<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">

<Preference
  android:key="change_password"
  android:title="Change master password">

   <intent android:targetPackage="com.kodholken.passdroid"
           android:targetClass="com.kodholken.passdroid.ChangePasswordActivity"/>
</Preference>    

<CheckBoxPreference
  android:key="close_logout"
  android:title="Log out on close"
  android:defaultValue="true"
  android:summary="Automatic logout when the application loses focus." />

<CheckBoxPreference
  android:key="display_username"
  android:title="Display username"
  android:defaultValue="true"
  android:summary="Show the username in addition to the system in the list of passwords."/>
  
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:title="Import / Export">
  <Preference
    android:key="file_export"
    android:title="@string/file_export_title">

    <intent android:targetPackage="com.kodholken.passdroid"
            android:targetClass="com.kodholken.passdroid.FileExportActivity"/>
  </Preference>
  
  <Preference
    android:key="file_import"
    android:title="@string/file_import_title">

    <intent android:targetPackage="com.kodholken.passdroid"
            android:targetClass="com.kodholken.passdroid.FileImportActivity"/>
  </Preference>
</PreferenceScreen>
  
</PreferenceScreen>
