<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="11"
      package="com.kodholken.passdroid" android:versionName="1.3">
    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:anyDensity="true"/>
        
    <application android:icon="@drawable/safe_icon" android:label="@string/app_name">
        <activity android:label="@string/app_name" android:name="Main"
        		  android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:label="@string/passwords"
                  android:name=".PasswordActivity"
                  android:theme="@android:style/Theme.Black.NoTitleBar"/>
        
        <activity android:label="@string/about_title"
                  android:name=".About"
                  android:icon="@drawable/safe_icon"
                  android:theme="@android:style/Theme.Dialog"/>
        
        <activity android:label="@string/add_title"
                  android:name=".Add"
                  android:theme="@android:style/Theme.Dialog"/>

        <activity android:label="@string/edit_title"
                  android:name=".Edit"
                  android:theme="@android:style/Theme.Dialog"/>
        
        <activity android:label="@string/login_title"
                  android:name=".Login"
                  android:theme="@android:style/Theme.Black.NoTitleBar"/>

        <activity android:label="@string/show_title"
                  android:name=".ShowPassword"
                  android:theme="@android:style/Theme.Dialog"/>

        <activity android:label="@string/initialize_title"
                  android:name=".Initialize"/>
                  
        <activity android:label="@string/settings_title"
                  android:name=".Settings"/>
                  
        <activity android:label="@string/change_password_title"
                  android:theme="@android:style/Theme.Dialog"        
                  android:name=".ChangePassword">
            <intent-filter>
                <action android:name="com.kodholken.passdroid.CHANGE_PASSWORD"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:label="@string/file_export_title"
                  android:theme="@android:style/Theme.Dialog"        
                  android:name=".FileExportActivity">
                  
            <intent-filter>
                <action android:name="com.kodholken.passdroid.FILE_EXPORT"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity android:label="@string/file_import_title"
                  android:theme="@android:style/Theme.Dialog"        
                  android:name=".FileImportActivity">
                  
            <intent-filter>
                <action android:name="com.kodholken.passdroid.FILE_IMPORT"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

                  
        <activity android:label="@string/generate_password_title"
                  android:theme="@android:style/Theme.Dialog"
                  android:name=".GeneratePasswordActivity"/>
                         
    </application>
    <uses-sdk android:minSdkVersion="3" />
</manifest>